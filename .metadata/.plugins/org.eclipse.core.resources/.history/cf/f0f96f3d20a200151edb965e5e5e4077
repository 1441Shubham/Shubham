package elevator;
import java.awt.geom.*;


public class elevator {

    static int floor = 0, choice=3;

    public static void main(String args[])
    {
    	
    	if(floor<choice){
    		System.out.println("The lift is on its way");
    		for(int i=floor;i<=choice;i++){
    			
    			if(i==choice){
    				System.out.println("The lift reached");
    			}else{
    				System.out.println("Floor "+i);
    			}
    		}
    		
    	}

    }
}


