package newFlipkart;

public class Ecomsite{
	paymentMethod pay=null;
	
	public paymentMethod choosePayment(String mode){
		if(mode=="Credit"){
			pay =new ccp();
		}else{
			pay =new dcp();
		}
		return pay;
	}
	
	public void makePayment(paymentMethod mode, int i){
		pay.makePayment(mode, i);
	}
}
