package elevator;
import java.awt.geom.*;


public class elevator {

    static int floor = 0, lift=4,choice1=2;

    public static void main(String args[])
    {
    	
    	if(floor<lift){
    		System.out.println("The lift is on its way");
    		for(int i=floor;i<=lift;i++){
    			
    			if(i==lift){
    				System.out.println("The lift has reached");
    			}else{
    				System.out.println("Floor "+i);
    			}
    		}	
    	}else{
    		System.out.println("You already are on +floor");
    	}
    	
    	System.out.println("");
    	if(floor<choice1){
    		
    	}
    }
}


