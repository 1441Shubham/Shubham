package elevator;
import java.util.ArrayList;

public class Elevator {
	int currentEleFloor=3;
	public Elevator(int no_of_floors) {
		// TODO Auto-generated constructor stub
		ArrayList elevatorPanel = new ArrayList(no_of_floors);
		
		for(int i=0;i<=no_of_floors;i++){
			elevatorPanel.add(i);
		}
		//System.out.println(elevatorPanel);
		int randomIndex = (int)(Math.random() * elevatorPanel.size());
		System.out.println(elevatorPanel.get(randomIndex));
	}
	
	public void move(int which_floor){
		if(currentEleFloor<which_floor){
			System.out.println("The Elevator is Moving UP.");
			
		}else if(currentEleFloor>which_floor){
			System.out.println("The Elevator is Moving Down.");
		}else{
			System.out.println("Doors Opened.");
		}
		
	}

}
