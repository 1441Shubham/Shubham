package newFlipkart;

public class Ecomsite{
	paymentMethod pay=null;
	
	public paymentMethod choosePayment(String mode){
		if(mode=="Credit"){
			pay =new ccp();
		}else if(mode=="Debit"){
			pay =new dcp();
		}else if(mode=="Net"){
			pay =new nbp();
		}else if(mode=="Cash"){
			pay =new codp();
		}else{
			break;
		}
		return pay;
	}
	
	public void makePayment(int price){
		pay.makePayment(price);
	}
}
